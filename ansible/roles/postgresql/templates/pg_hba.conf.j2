# PostgreSQL Client Authentication Configuration File
# Generated by Ansible - DO NOT EDIT MANUALLY

# TYPE  DATABASE        USER            ADDRESS                 METHOD

# Local connections
local   all             postgres                                peer
local   all             all                                     peer

# IPv4 local connections
host    all             all             127.0.0.1/32            scram-sha-256

# IPv6 local connections
host    all             all             ::1/128                 scram-sha-256

# Replication connections
local   replication     all                                     peer
host    replication     all             127.0.0.1/32            scram-sha-256
host    replication     all             ::1/128                 scram-sha-256

# repmgr connections from cluster nodes
host    replication     {{ repmgr_user }}    {{ pg_primary_ip }}/32         scram-sha-256
{% for ip in pg_standby_ips %}
host    replication     {{ repmgr_user }}    {{ ip }}/32                    scram-sha-256
{% endfor %}

# repmgr database access from cluster nodes
host    {{ repmgr_database }}    {{ repmgr_user }}    {{ pg_primary_ip }}/32         scram-sha-256
{% for ip in pg_standby_ips %}
host    {{ repmgr_database }}    {{ repmgr_user }}    {{ ip }}/32                    scram-sha-256
{% endfor %}

# HAProxy health check access
host    all             all             {{ haproxy_ip }}/32             scram-sha-256

# VPC-wide access (adjust for production!)
host    all             all             10.0.0.0/16             scram-sha-256

# Application access (adjust CIDR as needed)
host    all             all             0.0.0.0/0               scram-sha-256
